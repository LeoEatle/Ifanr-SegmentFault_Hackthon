.container{
    position: absolute;
    padding-left: 80rpx;
    padding-right: 80rpx;
    justify-content: flex-start;
}
#header{
  display: block;
  width: 80%;
  background-color: #fff;
  border: 1px solid #ff6666;
  height: 60rpx;
  margin: 30rpx auto;
}
#publish_activity{
  color: black;
  height: 60rpx;
  background-color: #fff;
  text-align: center;
  font-size: 0.8rem;
  font-weight: bold;
  line-height: 60rpx;
}
.photos{
  width: 300px;
  height: 300px;
}

.slide-image{
  width: 300px;
  min-height: 300px;
}

#swiper{
  height: 300px; 
}

#yueButton{
  position: fixed;
  left: 50%;
  margin-left: -50rpx;
  bottom: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  width: 100rpx;
  height: 100rpx;
}

#yueButton.active{
  background: #0094ff;
  color:#fff;
}

#activity_content{
  margin-top: 20rpx;
  width: 100%; 
  height: 400rpx;
}
#activity_content .activity_name, .activity_description{
  display: block;
  margin-top: 10rpx; 
  width: 100%;
  font-size: 0.8rem;
  text-align: center;
  margin: 10rpx;
  line-height: 1.5rem;
}
.title{
  display: block;
  width: 100%;
  color: #a9a9a9;
  text-align: center;
  line-height: 1rem;
  font-size: 0.5rem;
  border-bottom: 1px solid #a9a9a9;
}
.prompt{
  text-align: center;
  padding-left: 30%;
  padding-right: 30%;
  position: fixed;
  width: 100%;
  bottom: 30rpx;
  font-size: 0.5rem;
}
